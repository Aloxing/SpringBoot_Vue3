<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.SpringBootEnglishWordApp.Mapper.SatWordMapper">
    <select id="getSatWords" resultType="com.cn.SpringBootEnglishWordApp.Pojo.SatWord">
        select * from sat order by word limit #{pageSize} offset #{offset};;
    </select>
     <select id="getSatWordNums" resultType="Integer">
        select count(*) from sat ;
    </select>
    <select id="selectSatWords" resultType="com.cn.SpringBootEnglishWordApp.Pojo.SatWord">
        select * from sat where word like #{word};
    </select>
     <select id="selectAnySatWords" resultType="com.cn.SpringBootEnglishWordApp.Pojo.SatWord">
        select * from sat where word like '${word}%';
    </select>
</mapper>